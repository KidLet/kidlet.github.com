.index-content
{
	margin: 24px 0 0;
	width: 100%;
}

.index-content > .entry-page-image
{
	float: right;
	margin-bottom: 0;
	width: 47.916666667%;	
}

.index-content > article
{
	float: left;
	width: 47.916666667%;
}


.entry-header 
{
	margin-bottom: 24px;
}

.entry-title
{
	font-size: 22px;
	line-height: 1.2;
	font-weight: normal;
}

.entry-content
{
	line-height: 1.714285714;
}

.entry-content p
{
	margin: 0 0 24px;
	line-height: 1.714285714;	
}

.index-content >.secondary
{
	float: none;
	width: auto;
	padding-top: 24px;
	margin: 1.714285714rem 0 0;
	border-top: 1px solid #ededed;
}

.index-content >.secondary > .first
{
	float: left;
	width: 51.875%;
	margin-bottom: 24px;
}

.index-content >.secondary > .second
{
	float: right;
	width: 39.0625%;
	margin: 0 0 24px;
}

.index-content .widget li
{
	margin: 8px 0 0;
	font-size: 13px;
	line-height: 1.714285714;
	list-style-type: square;
	list-style-position: inside;
}

